<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.New" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="fontPath">fonts/LatoRegular.ttf</item>
    </style>
    <style name="pop_add_ainm" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <!-- Custom Class Styles -->
    <style name="Lato_Bold" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Lato-Bold.ttf</item>
    </style>
    <style name="Lato_Bold_italic" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Lato-BoldItalic.ttf</item>
    </style>
    <style name="Lato_Regular" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Lato-Lato-Regular.ttf</item>
    </style>

</resources>
